					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"username\": \"christian\",\r\n    \"email\": \"christian@mksrc.com\",\r\n    \"password\": \"testpass\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
